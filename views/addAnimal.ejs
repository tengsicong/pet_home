<!DOCTYPE html>
<html lang="en">
<head>
    <title>addAnimal</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container col-4">
    <h1 class="my-5"> Add animal</h1>
    <form id="addAnimal">
        <div class="form-group">
            <label for="ownerName">Owner name:</label>
            <input id="ownerName" class="form-control" name="ownerName" type="text"/>
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input id="name" class="form-control" name="name" type="text"/>
        </div>
        <div class="form-group">
            <label for="pettype">Pet Type:</label>
            <select id="pettype" class="form-control" name="type_id">
                <option value="" selected="selected">
                    Pet Type (Any)
                </option>
                <option value="1">Birds</option>
                <option value="2">Cats</option>
                <option value="3">Dogs</option>
                <option value="4">Fish</option>
                <option value="5">Horses</option>
                <option value="6">Poultry</option>
                <option value="7">Rabbits</option>
                <option value="8">Reptiles</option>
                <option value="9">Rodents</option>
            </select>
        </div>
        <div class="form-group">
            <label for="inputLocation">Location:</label>
            <input id="inputLocation" class="form-control" name="location" type="text">
        </div>
        <div class="form-group">
            <label for="birthday">Birthday:</label>
            <input id="birthday" class="form-control" name="dob" type="date">
        </div>
        <button id="submitAddAnimal" class="btn btn-primary">submit</button>
    </form>
</div>
<div class="container">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">PetType</th>
            <th scope="col">Location</th>
            <th scope="col">Age</th>
        </tr>
        </thead>
        <tbody>
        <% for(const animal of animals){ %>
            <tr>
                <th scope="row"><%= animal.id %></th>
                <td><%= animal.name %></td>
                <td>
                    <% switch (animal.type_id) {
                    case 1: %> Birds  <%break;
                    case 2: %> Cats  <%break;
                    case 3: %> Dogs  <%break;
                    case 4: %> Fish  <%break;
                    case 5: %> Horses  <%break;
                    case 6: %> Poultry  <%break;
                    case 7: %> Rabbits  <%break;
                    case 8: %> Reptiles  <%break;
                    case 9: %> Rodents  <%break;
                    } %>
                </td>
                <td><%= animal.location %></td>
                <td><%= animal.age %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<script src="/javascripts/mycommon.js"></script>
<script src="/javascripts/addAnimal.js"></script>
</body>
</html>
